echo "======== Puppet Installer ========"

rpm -qa puppet\* && { echo "Puppet already installed"; exit 0;}

OS_MAJ_VERSION=$(rpm -qa \*-release | grep -Ei "centos" | cut -d"-" -f3)

[[ -z "$OS_MAJ_VERSION" ]] && { echo "Distro not supported"; exit 1;}

yum install -y http://yum.puppetlabs.com/puppetlabs-release-el-"$OS_MAJ_VERSION".noarch.rpm > /dev/null 2>&1

yum install -y puppet  > /dev/null 2>&1
